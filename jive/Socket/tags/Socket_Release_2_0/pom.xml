<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>super-pom-C-CPP-tango</artifactId>
    <groupId>fr.soleil</groupId>
    <version>RELEASE</version>
  </parent>
  <groupId>org.tango.lib</groupId>
  <artifactId>Socket-${aol}-${library}-${mode}</artifactId>
  <version>1.4.1</version>
  <packaging>nar</packaging>
  <name>Socket</name>
  <description>Socket Device</description>
  <developers>
    <developer>
      <id>pons</id>
      <name>pons</name>
      <url>http://www.esrf.eu/</url>
      <organization>ESRF</organization>
      <organizationUrl>http://www.esrf.eu/</organizationUrl>
      <roles>
        <role>manager</role>
      </roles>
      <timezone>1</timezone>
    </developer>
  </developers>
  <scm>
    <connection>${scm.connection.cvs.tango-ds}:Communication/Socket</connection>
    <developerConnection>${scm.developerConnection.cvs.tango-ds}:Communication/Socket</developerConnection>
    <url>${scm.url.cvs.tango-ds}/Communication/Socket</url>
  </scm>
  <build>
    <sourceDirectory>${project.basedir}</sourceDirectory>
    <plugins>
      <plugin>
        <groupId>org.freehep</groupId>
        <artifactId>freehep-nar-plugin</artifactId>
        <configuration>
          <os>Linux</os>
          <cpp>
            <includePaths>
              <includePath>${project.basedir}</includePath>
            </includePaths>
            <sourceDirectory>${project.basedir}</sourceDirectory>
          </cpp>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
