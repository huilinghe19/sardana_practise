<sequence>
  <macro name="wa">
    <paramrepeat name="filter">
      <repeat nr="1">
        <param name="filter" value=".*"/>
      </repeat>
    </paramrepeat>
  </macro>
  <macro name="umv">
    <paramrepeat name="motor_pos_list">
      <repeat nr="1">
        <param name="motor" value="top"/>
        <param name="pos" value="0.0"/>
      </repeat>
    </paramrepeat>
  </macro>
  <macro name="umv">
    <paramrepeat name="motor_pos_list">
      <repeat nr="1">
        <param name="motor" value="bottom"/>
        <param name="pos" value="0.0"/>
      </repeat>
    </paramrepeat>
  </macro>
  <macro name="umv">
    <paramrepeat name="motor_pos_list">
      <repeat nr="1">
        <param name="motor" value="right"/>
        <param name="pos" value="20.0"/>
      </repeat>
    </paramrepeat>
  </macro>
  <macro name="umv">
    <paramrepeat name="motor_pos_list">
      <repeat nr="1">
        <param name="motor" value="left"/>
        <param name="pos" value="20.0"/>
      </repeat>
    </paramrepeat>
  </macro>
  <macro name="move">
    <param name="moveable" value="gapvert"/>
    <param name="position" value="40.0"/>
  </macro>
  <macro name="move">
    <param name="moveable" value="gaphor"/>
    <param name="position" value="60.0"/>
  </macro>
  <macro name="dscan">
    <param name="motor" value="top"/>
    <param name="start_pos" value="0.0"/>
    <param name="final_pos" value="20.0"/>
    <param name="nr_interv" value="5"/>
    <param name="integ_time" value="20.0"/>
    <macro name="oscillate">
      <param name="motor" value="top"/>
      <param name="amplitude" value="20.0"/>
      <param name="integ_time" value="10.0"/>
    </macro>
  </macro>
  <macro name="mv">
    <paramrepeat name="motor_pos_list">
      <repeat nr="1">
        <param name="motor" value="gapvert"/>
        <param name="pos" value="30.0"/>
      </repeat>
    </paramrepeat>
  </macro>
</sequence>
